<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>RestrictionFilter</filter-name>
        <filter-class>com.cc.filters.RestrictionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RestrictionFilter</filter-name>
        <url-pattern>/restriced/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>CustomerAdd</servlet-name>
        <servlet-class>com.cc.servlets.CustomerAdd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderAdd</servlet-name>
        <servlet-class>com.cc.servlets.OrderAdd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserSignup</servlet-name>
        <servlet-class>com.cc.servlets.UserSignup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserSignin</servlet-name>
        <servlet-class>com.cc.servlets.UserSignin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Restriction</servlet-name>
        <servlet-class>com.cc.servlets.Restriction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerAdd</servlet-name>
        <url-pattern>/CustomerAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderAdd</servlet-name>
        <url-pattern>/OrderAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserSignup</servlet-name>
        <url-pattern>/UserSignup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserSignin</servlet-name>
        <url-pattern>/UserSignin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Restriction</servlet-name>
        <url-pattern>/Restriction</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
